<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="11dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/layout_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="orderItem"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="UsingOnClickInXml">

            <ImageView
                android:id="@+id/order_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/milk"
                android:contentDescription="Product Image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp"
                     />



                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Price"
                    android:textColor="@color/textcolorSecond"
                    android:textSize="18sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_item_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "
                        android:textColor="@color/textcolorSecond"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/order_item_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 1"
                        android:textColor="@color/textcolorSecond"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/order_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9-6-2023"
                    android:textColor="#DF0B53"
                    android:textSize="14sp"
                    android:textStyle="bold"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                app:srcCompat="@drawable/order_btn"
                android:background="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



