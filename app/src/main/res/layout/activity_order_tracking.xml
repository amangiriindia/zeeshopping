<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Existing code -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/order_detailed_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Ordered Detailed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View order details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_box"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order date"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order #"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Status"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order total"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20-mar-2023"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45664345577"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ordered"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        />
                    <TextView
                        android:id="@+id/order_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 356.00"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="2dp"/>




                </LinearLayout>


            </LinearLayout>











            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipment details"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_box"
                android:padding="20dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/order_product_img"
                        android:layout_width="125dp"
                        android:layout_height="120dp"
                        android:src="@drawable/milk"
                        android:layout_gravity="right"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/order_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Milk"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price :   "
                                android:textStyle="normal"
                                android:textSize="16dp"
                                />

                            <TextView
                                android:id="@+id/order_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4555.6"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qty :  "
                                android:textStyle="normal"
                                android:textSize="16dp"
                                />

                            <TextView
                                android:id="@+id/order_qty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="16sp"
                                android:textAllCaps="true"
                                />

                        </LinearLayout>

                    </LinearLayout


                      >


                </LinearLayout >



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment information"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_box"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/order_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delevary"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_box"
                android:padding="20dp" >

                <TextView
                    android:id="@+id/order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucknow uttar Pradesh"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
            </LinearLayout>


           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >



            <Button
                android:id="@+id/order_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/pink"
                android:text="Cancel Order" />

               <Button
                   android:id="@+id/order_return_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="20dp"
                   android:layout_gravity="center"
                   android:textColor="@color/black"
                   android:background="@drawable/edit_text_bg"
                   android:backgroundTint="@color/colorPrimary"
                   android:layout_marginBottom="15dp"
                   android:text="Return"
                   android:visibility="gone" />

               <Button
                   android:id="@+id/order_replace_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="20dp"
                   android:layout_gravity="center"
                   android:textColor="@color/black"
                   android:background="@drawable/edit_text_bg"
                   android:backgroundTint="@color/pink"
                   android:layout_marginBottom="15dp"
                   android:text="Replace"
                   android:visibility="gone" />


           </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</ScrollView>
